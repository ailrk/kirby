# super + alt + f
#     ~/.config/scripts/screenshot win

# super + alt + s
#     ~/.config/scripts/screenshot sel

# open browser
super + B
    google-chrome-stable

# open file manager
super + shift + F
    bspc rule -a \* -o state=floating && nautilus

# colume control
XF86AudioLowerVolume
    ~/.config/scripts/volume down

XF86AudioRaiseVolume
    ~/.config/scripts/volume up

XF86AudioMute
    ~/.config/scripts/volume mute

# brightness control
XF86MonBrightnessDown
    ~/.config/scripts/brightness down

XF86MonBrightnessUp
    ~/.config/scripts/brightness up

super + alt + p
    ~/.config/scripts/redshift-toggle high

super + alt + q
    ~/.config/scripts/redshift-toggle low

super + alt + h
    urxvt -name float -e zsh -c "htop"

super + alt + b
    urxvt -name float -e zsh -c "cd ~/newDisk/book/ && ranger"

super + alt + m
    ~/.config/scripts/mpc-song

super + alt + d
    ~/.config/scripts/mpc-song next

super + alt + u
    ~/.config/scripts/mpc-song prev

super + alt + i
    ~/.config/scripts/mpc-song halt

super + alt + c
    ~/.config/scripts/workplace

super + alt + ctrl + l
  lock-screen
