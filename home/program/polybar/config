[colors]
    red1           = ${xrdb:color1}
    red2           = ${xrdb:color9}

    green1         = ${xrdb:color2}
    green2         = ${xrdb:color10}

    yellow1        = ${xrdb:color3}
    yellow2        = ${xrdb:color11}

    blue1          = ${xrdb:color4}
    blue2          = ${xrdb:color12}

    magenta1       = ${xrdb:color5}
    magenta2       = ${xrdb:color13}

    cyan1          = ${xrdb:color6}
    cyan2          = ${xrdb:color14}

    background     = #e82f343f
    background-alt = #ee2f343f
    foreground     = ${xrdb:foreground}
    foreground-alt = ${xrdb:foreground}

    primary        = #81a1c1
    secondary      = #d8dee9
    alert          = #bd2c40
    col            = #00f

[bar/main]
    monitor = ${env:MONITOR:}
    top = true
    margin-top = 0
    margin-bottom = 0
    width  = 100%
    height = 60
    radius = 6.0
    fixed-center = true

    background = ${colors.background}
    foreground = ${colors.foreground}

    line-size = 4

    padding-left = 0
    padding-right = 0

    module-margin-left = 1
    module-margin-right = 0

    font-0 = PT Mono":pixelsize=16;1
    font-1 = WenQuanYi Micro Hei:style=Regular;1
    font-2 = Font Awesome:style=Regular:pixelsize=15;1
    font-3 = Font Awesome 6 Free:pixelsize=15;2
    font-4 = Font Awesome 6 Free Solid:pixelsize=15;2
    font-5 = Font Awesome 6 Brands:pixelsize=15;2

    wm-restack     = bspwm
    modules-left   = winclose winmax bspwm
    modules-center = xwindow
    modules-right  = memory cpu temperature eth wlan xkeyboard volume battery date quickaccess powermenu

    scroll-up = bspc node -f next
    scroll-down = bspc node -f prev

[module/winclose]
    type = custom/text
    format-background = ${colors.background}
    format-frontgroud = ${colors.frontgroud}
    format-padding = 4
    format-underline = ${colors.secondary}
    label = 
    click-left = bspc node -c

[module/winmax]
    type = custom/text
    format-background = ${colors.background}
    format-frontgroud = ${colors.frontgroud}
    format-padding = 4
    format-underline = ${colors.secondary}
    label = 
    click-left = bspc node -t fullscreen

[module/quickaccess]
    type = custom/text
    format-background = ${colors.background}
    format-frontgroud = ${colors.frontgroud}
    format-padding = 4
    format-underline = ${colors.secondary}
    label = 
    click-left = quickaccess.sh

[module/powermenu]
    type = custom/text
    format = <label>
    format-background = ${colors.red1}
    format-frontgroud = ${colors.frontgroud}
    format-padding = 4
    format-underline = ${colors.secondary}

    label = 
    click-left = powermenu.sh

[module/xwindow]
    type = internal/xwindow
    label = %{A1:launcher.sh window:} %title:0:50:...% %{A}

[module/xkeyboard]
    type = internal/xkeyboard
    blacklist-0 = num lock

    format-prefix = ""
    format-prefix-foreground = ${colors.foreground-alt}

    label-layout =   %layout%
    label-layout-padding = 2

    label-indicator-padding = 2
    label-indicator-margin = 3

[module/filesystem]
    type = internal/fs
    interval = 25

    mount-0 = /

    label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
    label-unmounted = %mountpoint% not mounted
    label-unmounted-foreground = ${colors.foreground-alt}

[module/home]
    type = internal/fs
    interval = 25

    mount-0 = /home

    label-mounted = %{F#0a81f5}~%{F-}: %percentage_used%%
    label-unmounted = %mountpoint% not mounted
    label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
    type = internal/bspwm
    format = <label-state> <label-mode>
    margin-bottom = 0

    ; focused = Active workspace on focused monitor
    label-focused = %name%
    label-focused-background = ${colors.background-alt}
    label-focused-frontgroud = ${colors.frontgroud-alt}
    label-focused-padding = 6

    label-active = %name%
    label-active-background = ${colors.red1}
    label-active-foreground = ${colors.frontgroud-alt}
    label-active-underline = ${colors.primary}
    label-active-padding = 6

    label-occupied = %name%
    label-occupied-background = ${colors.background}
    label-occupied-foreground = ${colors.frontgroud}
    label-occupied-padding = 6

    label-urgent = %name%
    label-urgent-background = ${colors.background-alt}
    label-urgent-foreground = ${colors.alert}
    label-urgent-padding = 6

    label-empty = %name%
    label-empty-background = ${colors.background}
    label-empty-foreground = ${colors.frontgroud}
    label-empty-padding = 6

    pin-workspaces = true

[module/cpu]
    type = internal/cpu
    interval = 2
    format-prefix = ""
    format-prefix-foreground = ${colors.foreground}
    label = %percentage:2%%
    label-padding = 2

[module/memory]
    type = internal/memory
    interval = 2
    format-prefix = ""
    format-prefix-foreground = ${colors.foreground}
    label = %percentage_used%%
    label-padding = 2

[module/eth]
    type = internal/network
    interface = enp0s25
    interval = 3.0

    format-connected-underline = #95ffa4
    format-connected-prefix-foreground = ${colors.foreground-alt}
    label-connected = %local_ip%

    format-disconnected = <label-disconnected>
    format-disconnected-underline = ${self.format-connected-underline}
    label-disconnected = no eth
    label-disconnected-foreground = ${colors.foreground-alt}

[module/wlan]
    type = internal/network
    interface = wlp2s0
    interval = 3.0

    format-connected = <label-connected>
    label-connected = %upspeed% %downspeed%

    format-disconnected = <label-disconnected>
    label-disconnected = "disconnected"

[module/mpd]
    type = internal/mpd
    host = 127.0.0.1
    port = 6600

    format-online = "<label-song> @ <label-time>"
    format-offline = "offline"

    label-song = %artist% - %title%
    label-song-maxlen = 50
    label-song-ellipsis = true


[module/date]
    type = internal/date
    interval = 1

    date = "%m-%d"
    date-alt = "%Y-%m-%d"
    time = %I:%M %p
    time-alt = %I:%M:%S %p

    format-background = ${colors.red1}
    label =  %date%   %time%
    label-padding = 3


[module/volume]
    type = internal/pulseaudio

    format-volume = <ramp-volume> <label-volume>

    ramp-volume-0 = 
    ramp-volume-1 = 
    ramp-volume-2 = 

    label-volume = %percentage%%
    label-muted =  muted
    label-padding = 3

[module/temperature]
    type = internal/temperature
    thermal-zone = 0
    warn-temperature = 90
    hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input

    format = <ramp>  <label>
    format-underline = ${colors.secondary}
    format-warn = <ramp>  <label-warn>
    format-warn-underline = ${self.format-underline}

    label = %temperature-c%
    label-warn = %temperature-c%
    label-warn-foreground = ${colors.alert}

    ramp-0 =TEMP:
    ramp-1 =TEMP:
    ramp-2 =TEMP:
    ramp-foreground = ${colors.foreground}

[module/battery]
    type = internal/battery

    ; This is useful in case the battery never reports 100% charge
    full-at = 99

    ; Use the following command to list batteries and adapters:
    ; $ ls -1 /sys/class/power_supply/
    battery = ${env:BATTERY:}
    adapter = ${env:BATTERY_ADAPTOR:}

    ; If an inotify event haven't been reported in this many
    ; seconds, manually poll for new values.
    ;
    ; Needed as a fallback for systems that don't report events
    ; on sysfs/procfs.
    ;
    ; Disable polling by setting the interval to 0.
    ;
    ; Default: 5
    poll-interval = 5
    label-charging =   %percentage%%
    label-discharging =   %percentage%%
    label-full =   Full


[settings]
    screenchange-reload = true
    ;compositing-background = xor
    ;compositing-background = screen
    ;compositing-foreground = source
    ;compositing-border = over
